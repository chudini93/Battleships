@using HappyTeam.Battleships.Services.Core.Enums

<div class="cell">
    @switch (State)
    {
        case CellStates.Empty:
            <span></span>
            break;
        case CellStates.Hit:
        case CellStates.Sunk:
            <span class="hit">X</span>
            break;
        case CellStates.Ship:
            <span>@ShipName</span>
            break;
        case CellStates.Blocked:
        case CellStates.Miss:
            <span>&bull;</span>
            break;
    }
</div>

@code {
    [Parameter] public CellStates State { get; set; }
    [Parameter] public string ShipName { get; set; }
}

<style>
    .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid black;
        width: 40px;
        height: 40px;
    }

    .hit {
        color: darkred;
    }
</style>