@using HappyTeam.Battleships.Services.Core.Enums

<div class="cell">
    @switch (State)
    {
        case CellStates.Empty:
            <span class="value"></span>
            break;
        case CellStates.Hit:
            <span class="value">X</span>
            break;
        case CellStates.Blocked:
            <span class="value">B</span>
            break;
        case CellStates.Ship:
            <span class="value">@ShipName</span>
            break;
        case CellStates.Sunk:
        case CellStates.Miss:
            <span class="value">&bull;</span>
            break;
    }
</div>

@code {
    [Parameter] public CellStates State { get; set; }
    [Parameter] public string ShipName { get; set; }
}

<style>
    .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid black;
        width: 40px;
        height: 40px;
    }
</style>